<%= form_for [refinery, :katas_admin, @kata] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @kata,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:meaning, :interpretation],
                :object => "katas/kata" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.katas.admin.katas.kata'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @kata.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
