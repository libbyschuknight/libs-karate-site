<% content_for :body_content_title do %>
  <%= @meaning.japanese_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Japanese Name</h1>
    <p>
      <%=raw @meaning.japanese_name %>
    </p>
  </section>
  <section>
    <h1>English Name</h1>
    <p>
      <%=raw @meaning.english_name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @meaning.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="meanings">
      <% @meanings.each do |meaning| %>
        <li>
          <%= link_to meaning.japanese_name, refinery.meanings_meaning_path(meaning) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
