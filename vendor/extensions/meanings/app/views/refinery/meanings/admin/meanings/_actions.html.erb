<ul>
  <% if ::Refinery::Meanings::Admin::MeaningsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.meanings_admin_meanings_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_meanings_admin_meaning_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Meanings::Admin::MeaningsController.sortable? && ::Refinery::Meanings::Meaning.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.meanings_admin_meanings_path,
                     t('.reorder', what:  "Meanings"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.meanings_admin_meanings_path,
                      t('.reorder_done', what: "Meanings"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
