<% content_for :body_content_title do %>
  <%= @stance.japanese_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Japanese Name</h1>
    <p>
      <%=raw @stance.japanese_name %>
    </p>
  </section>
  <section>
    <h1>English Name</h1>
    <p>
      <%=raw @stance.english_name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @stance.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @stance.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="stances">
      <% @stances.each do |stance| %>
        <li>
          <%= link_to stance.japanese_name, refinery.stances_stance_path(stance) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
