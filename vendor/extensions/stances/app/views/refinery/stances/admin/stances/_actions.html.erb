<ul>
  <% if ::Refinery::Stances::Admin::StancesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.stances_admin_stances_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_stances_admin_stance_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Stances::Admin::StancesController.sortable? && ::Refinery::Stances::Stance.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.stances_admin_stances_path,
                     t('.reorder', what:  "Stances"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.stances_admin_stances_path,
                      t('.reorder_done', what: "Stances"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
