<% content_for :body do %>
  <div id="people">
    <div>
      <% @people.each do |person| %>
        <%= link_to refinery.people_person_path(person) do %>
            <figure>
              <%= image_fu person.photo, "300x300" %>
              <figcaption>
                <%= person.grade.title %> <%= person.first_name %>
              </figcaption>
            </figure>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<%= render '/refinery/content_page' %>
