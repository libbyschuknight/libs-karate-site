<% content_for :body_content_title do %>
  <%= @grade.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Dan</h1>
    <p>
      <%=raw @grade.dan %>
    </p>
  </section>
  <section>
    <h1>Level</h1>
    <p>
      <%=raw @grade.level %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="grades">
      <% @grades.each do |grade| %>
        <li>
          <%= link_to grade.title, refinery.people_grade_path(grade) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
